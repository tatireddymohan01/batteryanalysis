# Environment Variables Template
# Copy this file to .env and fill in your values

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_RESOURCE_GROUP=battery-ml-rg
AZURE_WORKSPACE_NAME=battery-ml-workspace
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# MLflow Configuration
MLFLOW_TRACKING_URI=./models/experiments
MLFLOW_EXPERIMENT_NAME=battery_degradation

# Database (Optional - for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/battery_db

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Model Paths
MODEL_PATH=./models/saved/best_model.pkl
SCALER_PATH=./models/saved/scaler.pkl

# Security (for production API)
# API_KEY=your-secret-api-key
# JWT_SECRET_KEY=your-jwt-secret-key
